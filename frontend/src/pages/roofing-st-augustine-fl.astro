---
import Layout from '../layouts/Layout.astro';

const location = "St. Augustine";
const county = "St. Johns County";
const phone = "(904) 606-5313";
const estimateUrl = 'https://app.roofr.com/instant-estimator/4db598a1-7ca9-4594-a916-031741fecbfc/GimosRoofing';

const nearbyAreas = [
  { name: "Nocatee", href: "/roofing-nocatee-fl" },
  { name: "Ponte Vedra Beach", href: "/roofing-ponte-vedra-beach-fl" },
  { name: "Jacksonville Beach", href: "/roofing-jacksonville-beach-fl" },
  { name: "San Marco", href: "/roofing-san-marco-fl" },
  { name: "Orange Park", href: "/roofing-orange-park-fl" }
];

const faqs = [
  { q: `Do you work on historic homes in ${location}?`, a: `Absolutely! We have extensive experience with ${location}'s historic properties. We understand preservation guidelines and offer materials that complement historic homes while providing modern protection.` },
  { q: `How much does a new roof cost in ${location}?`, a: `Roof replacement in ${location} typically costs $8,000 to $30,000+ depending on home size and materials. Tile roofing for historic homes costs more. We offer financing from $99/month.` },
  { q: `What materials work best for ${location}?`, a: `Clay or concrete tile for Spanish Colonial styles, architectural shingles for traditional homes, metal roofing for durability. All materials selected for both aesthetics and coastal Florida durability.` },
  { q: `Do you offer hurricane-resistant roofing?`, a: `Yes! ${location}'s coastal location makes this essential. We offer impact-resistant shingles, fortified tile installation, and metal roofing rated for high winds.` },
  { q: `Do you offer emergency roof repair?`, a: `Yes! We provide 24/7 emergency service throughout ${location} and ${county}. Call ${phone} for immediate assistance with leaks or storm damage.` },
  { q: `Are you licensed and insured?`, a: `Yes. Fully licensed in Florida with comprehensive liability and workers' comp coverage. We've completed many projects throughout ${location} and the beaches.` }
];

const schemaData = {
  "@context": "https://schema.org",
  "@type": "RoofingContractor",
  "name": `Gimo's Roofing - ${location}`,
  "url": `https://gimosroofing.com/roofing-st-augustine-fl`,
  "telephone": phone,
  "address": { "@type": "PostalAddress", "addressLocality": location, "addressRegion": "FL", "addressCountry": "US" },
  "aggregateRating": { "@type": "AggregateRating", "ratingValue": "5", "reviewCount": "78" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({ "@type": "Question", "name": faq.q, "acceptedAnswer": { "@type": "Answer", "text": faq.a } }))
};
---

<Layout
  title={`Roofing Company ${location} FL | Historic & Coastal Roof Repair | Gimo's Roofing`}
  description={`${location}'s historic homes need a roofer who respects their character. From Spanish tile downtown to beach cottages on Anastasia Island, we've got the experience. Call ${phone}.`}
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero -->
  <section class="bg-secondary py-16">
    <div class="max-w-4xl mx-auto px-4 text-center text-white">
      <p class="text-primary font-semibold mb-3">Serving {location} & {county}</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-5">Roofing Company in {location}, FL</h1>
      <p class="text-lg text-gray-300 mb-8 max-w-xl mx-auto">
        Professional roofing services for America's oldest city. We respect {location}'s architectural heritage while providing modern roofing solutions.
      </p>
      <div class="flex flex-wrap justify-center gap-4 mb-6">
        <a href={estimateUrl} target="_blank" rel="noopener" class="btn btn-primary px-6 py-3 font-semibold">Get Free Estimate</a>
        <a href={`tel:+1${phone.replace(/\D/g, '')}`} class="btn bg-white text-secondary hover:bg-gray-100 px-6 py-3 font-semibold">{phone}</a>
      </div>
      <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-300">
        <span>✓ Licensed & Insured</span>
        <span>✓ Historic Home Experience</span>
        <span>✓ Financing Available</span>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="bg-primary py-5">
    <div class="max-w-4xl mx-auto px-4">
      <div class="flex flex-wrap justify-center gap-10 text-secondary">
        <div class="text-center">
          <span class="text-3xl font-bold">500+</span>
          <span class="text-sm ml-2">Roofs</span>
        </div>
        <div class="text-center">
          <span class="text-3xl font-bold">15+</span>
          <span class="text-sm ml-2">Years</span>
        </div>
        <div class="text-center">
          <span class="text-3xl font-bold">5.0</span>
          <span class="text-sm ml-2">Star Rating</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-4">Your Local {location} Roofing Experts</h2>
      <p class="text-gray-600 mb-4">
        {location} holds a special place in American history as the nation's oldest city, and its architecture reflects centuries of diverse influences. From Spanish Colonial and Mediterranean styles to Victorian, Flagler-era, and modern coastal designs, these homes deserve roofing contractors who understand their unique needs.
      </p>
      <p class="text-gray-600">
        At Gimo's Roofing, we understand the importance of preserving this architectural heritage while providing roofing solutions that meet the demands of coastal Florida living. Whether you own a historic home in the downtown district, a beachfront property on Anastasia Island, or a modern home in World Golf Village, we have the expertise to serve your needs.
      </p>
    </div>
  </section>

  <!-- Services -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Our Services</h2>

      <!-- Roofing Services -->
      <div class="mb-10">
        <div class="flex items-center gap-3 mb-5">
          <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
          </div>
          <h3 class="text-xl font-bold text-secondary">Roofing Services</h3>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Historic Roof Replacement</h4>
            <p class="text-gray-600 text-sm">Roof replacement respecting {location}'s historic character. Materials that complement the architecture. Starting at $8,000.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Tile Roofing</h4>
            <p class="text-gray-600 text-sm">Clay and concrete tile to match {location}'s Spanish Colonial and Mediterranean architecture. Installation and repair.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Storm Damage Repair</h4>
            <p class="text-gray-600 text-sm">Fast repairs for storm damage. 24/7 emergency service for historic and modern homes throughout {location}.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Commercial Roofing</h4>
            <p class="text-gray-600 text-sm">Professional roofing for downtown storefronts and beach properties. We understand historic guidelines.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">New Construction</h4>
            <p class="text-gray-600 text-sm">Quality roofing for new builds throughout {location} and World Golf Village. We work with builders.</p>
          </div>
        </div>
      </div>

      <!-- Siding Services -->
      <div>
        <div class="flex items-center gap-3 mb-5">
          <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
          </div>
          <h3 class="text-xl font-bold text-secondary">Siding Services</h3>
        </div>
        <div class="grid sm:grid-cols-2 gap-5">
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Siding Installation</h4>
            <p class="text-gray-600 text-sm">Siding that complements historic and contemporary architecture throughout {location}.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Siding Repair</h4>
            <p class="text-gray-600 text-sm">Expert siding repairs to restore and protect your home's exterior from Florida's coastal weather.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Why {location} Homeowners Choose Us</h2>
      <div class="space-y-6">
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Historic District Experience</h3>
            <p class="text-gray-600 text-sm">We've worked on properties throughout {location}'s historic areas with excellent results.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Tile Roofing Specialists</h3>
            <p class="text-gray-600 text-sm">Expert installation and repair of clay and concrete tile that defines {location}'s character.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Hurricane-Ready Solutions</h3>
            <p class="text-gray-600 text-sm">Materials and installation techniques that meet Florida's coastal building requirements.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Warranty Protection</h3>
            <p class="text-gray-600 text-sm">Manufacturer warranties on materials plus our own workmanship guarantee.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Materials -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Roofing Materials for {location} Homes</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$15,000+</div>
          <h3 class="font-bold text-secondary mb-2">Clay & Concrete Tile</h3>
          <p class="text-gray-600 text-sm">The iconic choice for {location}'s Spanish Colonial architecture. Barrel tile, S-tile, flat tile in terra cotta and custom colors.</p>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$8,000+</div>
          <h3 class="font-bold text-secondary mb-2">Architectural Shingles</h3>
          <p class="text-gray-600 text-sm">Premium shingles for traditional and modern homes. Impact-resistant options with excellent wind ratings.</p>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$12,000+</div>
          <h3 class="font-bold text-secondary mb-2">Metal Roofing</h3>
          <p class="text-gray-600 text-sm">Standing seam and metal shingles for exceptional durability. Styles that complement historic and contemporary architecture.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Climate Section -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-6 text-center">Built for {location}'s Coastal Climate</h2>
      <div class="grid sm:grid-cols-2 gap-6">
        <div>
          <h3 class="font-bold text-secondary text-sm">Salt Air Resistant</h3>
          <p class="text-gray-600 text-sm">Materials designed to withstand salt air exposure common in coastal {location}.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">Rain Ready</h3>
          <p class="text-gray-600 text-sm">Proper drainage and sealed penetrations to handle heavy coastal rainfall.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">Hurricane Rated</h3>
          <p class="text-gray-600 text-sm">All installations meet Florida Building Code for coastal wind uplift requirements.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">Humidity Resistant</h3>
          <p class="text-gray-600 text-sm">Algae-resistant shingles and proper ventilation to combat Florida's high humidity.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Common Questions</h2>
      <div class="space-y-3">
        {faqs.map((faq, index) => (
          <div class="border border-gray-200 rounded-xl overflow-hidden bg-white">
            <button class="faq-btn w-full px-5 py-4 text-left flex justify-between items-center hover:bg-gray-50" data-index={index}>
              <span class="font-semibold text-secondary text-sm pr-4">{faq.q}</span>
              <svg class="w-4 h-4 text-primary faq-icon transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="faq-answer hidden px-5 pb-4">
              <p class="text-gray-600 text-sm">{faq.a}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Neighborhoods -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h2 class="text-2xl font-bold text-secondary mb-4">Serving All {location} Communities</h2>
      <p class="text-gray-600 mb-6">
        From historic downtown to the beaches, we've completed projects throughout {location} including St. Augustine Beach, Anastasia Island, World Golf Village, Vilano Beach, Crescent Beach, Butler Beach, Lincolnville, Uptown, Davis Shores, Lighthouse Park, and St. Augustine Shores.
      </p>
    </div>
  </section>

  <!-- Nearby Areas -->
  <section class="py-10 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h3 class="font-bold text-secondary mb-4">Also Serving Nearby Areas</h3>
      <div class="flex flex-wrap justify-center gap-x-5 gap-y-2 text-sm">
        {nearbyAreas.map((area) => (
          <a href={area.href} class="text-primary hover:underline">{area.name}</a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-14 bg-primary">
    <div class="max-w-2xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-secondary mb-4">Get Your Free Estimate</h2>
      <p class="text-secondary/80 mb-6">Contact {location}'s trusted roofing company today. Historic home expertise and coastal durability.</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={estimateUrl} target="_blank" rel="noopener" class="btn bg-secondary text-white hover:bg-secondary/90 px-8 py-3 font-semibold">Free Estimate</a>
        <a href={`tel:+1${phone.replace(/\D/g, '')}`} class="btn bg-white text-secondary hover:bg-gray-100 px-8 py-3 font-semibold">{phone}</a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.querySelectorAll('.faq-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const answer = btn.nextElementSibling;
      const icon = btn.querySelector('.faq-icon');
      document.querySelectorAll('.faq-answer').forEach(a => { if (a !== answer) a.classList.add('hidden'); });
      document.querySelectorAll('.faq-icon').forEach(i => { if (i !== icon) i.classList.remove('rotate-180'); });
      answer?.classList.toggle('hidden');
      icon?.classList.toggle('rotate-180');
    });
  });
</script>
