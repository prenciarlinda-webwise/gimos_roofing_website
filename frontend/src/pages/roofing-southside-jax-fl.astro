---
import Layout from '../layouts/Layout.astro';

const location = "Southside";
const county = "Duval County";
const parentCity = "Jacksonville";
const estimateUrl = 'https://app.roofr.com/instant-estimator/9ef814fe-1efa-4e6b-aaed-45ff7eda2015/GimosRoofing/welcome-question';
const financingUrl = 'https://application.enerbank.com/#/link?spnum=8007747598&cid=118584&promo=DEL2625&loamt=';

const neighborhoods = [
  "St. Johns Town Center", "Deerwood", "Baymeadows", "Tinseltown",
  "The Avenues", "Sunbeam", "Philips Highway", "University Boulevard South",
  "Gate Parkway", "Southpoint", "Butler Boulevard Area", "Beach Boulevard Area"
];

const services = [
  { title: "Roof Replacement", href: "/services/roof-replacement", description: "Complete roof replacement for Southside homes. From Deerwood estates to Baymeadows condos, we install quality roofing systems designed for Florida's climate. Starting at $7,900 with financing available." },
  { title: "Roof Repair", href: "/services/roof-repair", description: "Fast, reliable roof repairs for leaks, storm damage, missing shingles, and general wear. Our Southside team responds quickly to protect your home. Emergency services available 24/7." },
  { title: "New Construction Roofing", href: "/services/new-construction-roofing", description: "Expert roof installation for new construction throughout Southside's growing developments. We work with builders and homeowners to deliver quality roofing that meets Florida codes." },
  { title: "Commercial Roofing", href: "/services/commercial-roofing", description: "Professional commercial roofing for Southside businesses. From Town Center retail to Baymeadows offices, we handle flat roofs, TPO, metal, and more." },
  { title: "Siding Installation", href: "/services/siding-installation", description: "Transform your Southside home's exterior with quality siding. Vinyl, James Hardie fiber cement, and other durable options available." },
  { title: "Siding Repair", href: "/services/siding-repair", description: "Expert siding repairs to restore and protect your Southside home's exterior from Florida's weather." }
];

const faqs = [
  {
    question: `How much does roof replacement cost in ${location}?`,
    answer: `Roof replacement in ${location} typically costs between $8,000 and $28,000+ depending on your home's size, roof complexity, and materials chosen. The average ${location} home (2,200-2,800 sq ft) runs $13,000-$18,000 with architectural shingles. We provide free detailed estimates and offer financing with payments as low as $99/month.`
  },
  {
    question: `What roofing materials are best for ${location} homes?`,
    answer: `${location} homes perform well with impact-resistant architectural shingles (GAF Timberline HDZ, Owens Corning Duration Storm) which handle Florida's heat, humidity, and storms. Metal roofing is popular for its durability and energy efficiency. Some upscale ${location} neighborhoods like Deerwood opt for tile roofing.`
  },
  {
    question: `Do you offer emergency roof repair in ${location}?`,
    answer: `Yes! We provide 24/7 emergency roof repair throughout ${location}. Storm damage, active leaks, or fallen tree limbs - call us immediately at (904) 606-5313. We'll dispatch a team to tarp and secure your roof.`
  },
  {
    question: `How long does a roof replacement take in ${location}?`,
    answer: `Most ${location} roof replacements are completed in 1-3 days. Larger homes or complex roofs (multiple levels, dormers, steep pitch) may take slightly longer. We work efficiently while maintaining quality and clean up thoroughly each day.`
  },
  {
    question: `Do you help with insurance claims for ${location} storm damage?`,
    answer: `Absolutely! We have extensive experience with insurance claims throughout ${location}. We document all damage with detailed photos, provide accurate repair estimates, and work directly with your adjuster to ensure fair coverage.`
  },
  {
    question: `Are you licensed to work in ${location}?`,
    answer: `Yes! Gimo's Roofing is fully licensed by the State of Florida and carries comprehensive liability and workers' compensation insurance. We've completed many roofing projects throughout ${location} and ${parentCity}.`
  },
  {
    question: `What warranties do you offer on ${location} roofing?`,
    answer: `We provide manufacturer warranties on materials (typically 25-50 years depending on product) plus our own workmanship warranty. We stand behind every ${location} installation.`
  },
  {
    question: `Do you work on commercial roofs in ${location}?`,
    answer: `Yes! We provide commercial roofing services throughout ${location}, including flat roof systems, TPO, EPDM, and metal roofing. We work with property managers, business owners, and commercial developers.`
  },
  {
    question: `Do you offer financing for ${location} homeowners?`,
    answer: `Yes! Through EnerBank USA, qualified ${location} homeowners can get flexible financing with competitive rates. Payments as low as $99/month make a quality roof affordable for any budget.`
  },
  {
    question: `What sets Gimo's Roofing apart in ${location}?`,
    answer: `We're a local Jacksonville company that treats every ${location} home like our own. Our crew is experienced, professional, and respectful of your property. We use quality materials, provide transparent pricing, and stand behind our work with solid warranties.`
  }
];

const schemaData = {
  "@context": "https://schema.org",
  "@type": "RoofingContractor",
  "name": `Gimo's Roofing - ${location}`,
  "description": `Professional roofing company serving ${location}, ${parentCity} FL. Roof replacement, repair, and installation for residential and commercial properties.`,
  "url": `https://gimosroofing.com/roofing-southside-jax-fl`,
  "telephone": "(904) 606-5313",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": parentCity,
    "addressRegion": "FL",
    "addressCountry": "US"
  },
  "areaServed": {
    "@type": "Place",
    "name": `${location}, ${parentCity}, FL`,
    "containedInPlace": { "@type": "AdministrativeArea", "name": county }
  },
  "priceRange": "$$"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": { "@type": "Answer", "text": faq.answer }
  }))
};
---

<Layout
  title={`Roofing Company ${location} Jacksonville FL | Roof Repair & Replacement | Gimo's Roofing`}
  description={`From Deerwood estates to Baymeadows townhomes, we roof all of ${location} Jacksonville. Residential and commercial - we've done it all in this area. Free estimates: (904) 606-5313.`}
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-secondary/95 via-secondary/85 to-secondary/70"></div>
    <div class="relative max-w-7xl mx-auto px-4">
      <nav class="text-sm mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center">
          <li><a href="/" class="text-gray-300 hover:text-primary">Home</a></li>
          <li><span class="mx-2 text-gray-400">/</span></li>
          <li><a href="/service-areas" class="text-gray-300 hover:text-primary">Service Areas</a></li>
          <li><span class="mx-2 text-gray-400">/</span></li>
          <li><a href="/roofing-jacksonville-fl" class="text-gray-300 hover:text-primary">{parentCity}</a></li>
          <li><span class="mx-2 text-gray-400">/</span></li>
          <li><span class="text-primary">{location}</span></li>
        </ol>
      </nav>
      <div class="max-w-3xl text-white">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Trusted Roofing Company in <span class="text-primary">{location} Jacksonville, FL</span>
        </h1>
        <p class="text-xl text-gray-200 mb-4">
          {location}'s premier roofing contractor. Professional roof replacement, repair, and installation for {parentCity}'s fastest-growing area.
        </p>
        <p class="text-lg text-gray-300 mb-8">
          From Deerwood estates to Baymeadows townhomes, we deliver quality roofing that protects your {location} property for decades.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href={estimateUrl} target="_blank" rel="noopener noreferrer" class="btn btn-primary text-lg px-8 py-3">
            Get Free Estimate
          </a>
          <a href="tel:+19046065313" class="btn bg-white text-secondary hover:bg-gray-100 text-lg px-8 py-3">
            (904) 606-5313
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-secondary mb-6">{location}'s Roofing Experts</h2>
          <p class="text-gray-600 mb-4">
            {location} {parentCity} is the city's commercial and retail hub, home to St. Johns Town Center, The Avenues Mall, and thousands of families in neighborhoods from Deerwood to Baymeadows. This dynamic area needs reliable roofing contractors who understand both residential and commercial needs.
          </p>
          <p class="text-gray-600 mb-4">
            {location}'s housing ranges from upscale Deerwood estates to affordable Baymeadows apartments and townhomes, with newer developments continuing to expand. Each property has unique roofing requirements, and we have the experience to handle them all.
          </p>
          <p class="text-gray-600 mb-6">
            Gimo's Roofing has served {location} homeowners and businesses for years. Whether you need a roof replacement for your Deerwood home, repairs on your Baymeadows townhouse, or commercial roofing for your Town Center business, we deliver quality work at fair prices.
          </p>
          <div class="flex flex-wrap gap-4">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span class="text-gray-700">Licensed & Insured</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span class="text-gray-700">Residential & Commercial</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span class="text-gray-700">Financing Available</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 rounded-2xl p-8">
          <h3 class="text-xl font-bold text-secondary mb-4">Why {location} Chooses Gimo's</h3>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              <div><strong class="text-secondary">Local Jacksonville Company</strong><p class="text-gray-600 text-sm">We live and work here - your neighbors trust us</p></div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              <div><strong class="text-secondary">Residential & Commercial</strong><p class="text-gray-600 text-sm">Full-service roofing for all property types</p></div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              <div><strong class="text-secondary">Transparent Pricing</strong><p class="text-gray-600 text-sm">No hidden fees, no surprises</p></div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              <div><strong class="text-secondary">Insurance Claim Experts</strong><p class="text-gray-600 text-sm">We help with storm damage claims</p></div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-secondary mb-4">Roofing Services in {location}</h2>
        <p class="text-gray-600 max-w-3xl mx-auto text-lg">
          Complete roofing solutions for {location} homes and businesses.
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {services.map((service) => (
          <a href={service.href} class="group bg-white rounded-xl p-6 shadow-md hover:shadow-xl transition-all border-2 border-transparent hover:border-primary">
            <h3 class="text-xl font-bold text-secondary mb-3 group-hover:text-primary transition-colors">{service.title}</h3>
            <p class="text-gray-600 text-sm mb-4">{service.description}</p>
            <span class="text-primary font-semibold text-sm flex items-center gap-1">Learn More <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg></span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Neighborhoods Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary mb-4">{location} Areas We Serve</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">We provide roofing services throughout {location} and surrounding areas.</p>
      </div>
      <div class="flex flex-wrap justify-center gap-3">
        {neighborhoods.map((area) => (
          <span class="px-4 py-2 bg-gray-100 rounded-full text-gray-700">{area}</span>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-secondary mb-4">{location} Roofing FAQ</h2>
        <p class="text-gray-600 text-lg">Answers to common roofing questions from {location} property owners.</p>
      </div>
      <div class="space-y-3">
        {faqs.map((faq, index) => (
          <div class="border border-gray-200 rounded-xl overflow-hidden bg-white">
            <button class="faq-btn w-full px-5 py-4 text-left flex justify-between items-center hover:bg-gray-50" data-index={index}>
              <span class="font-semibold text-secondary text-sm pr-4">{faq.question}</span>
              <svg class="w-4 h-4 text-primary faq-icon transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="faq-answer hidden px-5 pb-4">
              <p class="text-gray-600 text-sm">{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Nearby Areas -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-10">
        <h2 class="text-3xl font-bold text-secondary mb-4">Nearby Service Areas</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">We also serve these neighboring {parentCity} communities.</p>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-3">
        <a href="/roofing-jacksonville-fl" class="group bg-gray-50 rounded-lg p-3 text-center hover:bg-primary/10 transition-colors">
          <h3 class="font-semibold text-secondary group-hover:text-primary text-sm">Jacksonville</h3>
        </a>
        <a href="/roofing-san-marco-fl" class="group bg-gray-50 rounded-lg p-3 text-center hover:bg-primary/10 transition-colors">
          <h3 class="font-semibold text-secondary group-hover:text-primary text-sm">San Marco</h3>
        </a>
        <a href="/roofing-mandarin-fl" class="group bg-gray-50 rounded-lg p-3 text-center hover:bg-primary/10 transition-colors">
          <h3 class="font-semibold text-secondary group-hover:text-primary text-sm">Mandarin</h3>
        </a>
        <a href="/roofing-jacksonville-beach-fl" class="group bg-gray-50 rounded-lg p-3 text-center hover:bg-primary/10 transition-colors">
          <h3 class="font-semibold text-secondary group-hover:text-primary text-sm">Jacksonville Beach</h3>
        </a>
        <a href="/service-areas" class="group bg-primary/10 rounded-lg p-3 text-center hover:bg-primary/20 transition-colors">
          <h3 class="font-semibold text-primary text-sm">All Areas &rarr;</h3>
        </a>
      </div>
      <div class="mt-6 text-center">
        <p class="text-gray-600 text-sm">Learn more: <a href="/about" class="text-primary hover:underline">About Us</a> | <a href="/gallery" class="text-primary hover:underline">Our Work</a> | <a href="/contact" class="text-primary hover:underline">Contact</a></p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-secondary mb-4">
        Ready for a New Roof in {location}?
      </h2>
      <p class="text-secondary/80 text-lg mb-8">
        Get a free, no-obligation estimate from {location}'s trusted roofing company. Quality workmanship, fair pricing, and financing options available.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={estimateUrl} target="_blank" rel="noopener noreferrer" class="btn bg-secondary text-white hover:bg-secondary/90 text-lg px-8 py-3">
          Get Your Free Estimate
        </a>
        <a href={financingUrl} target="_blank" rel="noopener noreferrer" class="btn bg-white text-secondary hover:bg-gray-100 text-lg px-8 py-3">
          Apply for Financing
        </a>
      </div>
      <p class="mt-6 text-secondary/70">
        Or call us: <a href="tel:+19046065313" class="text-secondary font-bold hover:underline">(904) 606-5313</a>
      </p>
    </div>
  </section>
</Layout>
