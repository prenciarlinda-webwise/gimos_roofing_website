---
import Layout from '../layouts/Layout.astro';

const location = "Arlington";
const county = "Duval County";
const phone = "(904) 606-5313";
const estimateUrl = 'https://app.roofr.com/instant-estimator/4db598a1-7ca9-4594-a916-031741fecbfc/GimosRoofing';

const nearbyAreas = [
  { name: "Jacksonville", href: "/roofing-jacksonville-fl" },
  { name: "Jacksonville Beach", href: "/roofing-jacksonville-beach-fl" },
  { name: "Atlantic Beach", href: "/roofing-atlantic-beach-fl" },
  { name: "Neptune Beach", href: "/roofing-neptune-beach-fl" },
  { name: "Southside", href: "/roofing-southside-jax-fl" },
  { name: "San Marco", href: "/roofing-san-marco-fl" },
  { name: "Riverside", href: "/roofing-riverside-fl" },
  { name: "Mandarin", href: "/roofing-mandarin-fl" }
];

const faqs = [
  { q: `How much does a new roof cost in ${location}?`, a: `Roof replacement in ${location} typically costs between $7,900 and $22,000 depending on size, materials, and roof complexity. The average ${location} home pays $10,000-$14,000 for architectural shingles. We offer financing from $99/month.` },
  { q: `Do you offer emergency roof repair in ${location}?`, a: `Yes! We provide 24/7 emergency service throughout ${location}. Call ${phone} for immediate assistance with leaks or storm damage.` },
  { q: `How long does roof replacement take?`, a: `Most ${location} roofs are completed in 1-2 days. Larger or more complex roofs may take 3 days. We clean up thoroughly each day.` },
  { q: `Are you licensed and insured?`, a: `Yes. Fully licensed in Florida with comprehensive liability and workers' comp coverage. We provide proof upon request.` },
  { q: `Do you help with insurance claims?`, a: `Absolutely. We document damage, provide estimates, and work directly with your adjuster to ensure fair coverage for ${location} homeowners.` },
  { q: `What roofing materials work best for older ${location} homes?`, a: `Many ${location} homes from the 1960s-1980s benefit from upgraded architectural shingles (GAF, Owens Corning) with better ventilation. Metal roofing is also popular for durability.` }
];

const schemaData = {
  "@context": "https://schema.org",
  "@type": "RoofingContractor",
  "name": `Gimo's Roofing - ${location}`,
  "url": `https://gimosroofing.com/roofing-arlington-fl`,
  "telephone": phone,
  "address": { "@type": "PostalAddress", "addressLocality": location, "addressRegion": "FL", "addressCountry": "US" },
  "aggregateRating": { "@type": "AggregateRating", "ratingValue": "5", "reviewCount": "78" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({ "@type": "Question", "name": faq.q, "acceptedAnswer": { "@type": "Answer", "text": faq.a } }))
};
---

<Layout
  title={`Roofing Company ${location} FL | Roof Repair & Replacement | Gimo's Roofing`}
  description={`Need a roofer in ${location}? We've been replacing and repairing roofs in this neighborhood for years. Quality work, fair prices, no surprises. Call ${phone} for your free estimate.`}
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero -->
  <section class="bg-secondary py-16">
    <div class="max-w-4xl mx-auto px-4 text-center text-white">
      <p class="text-primary font-semibold mb-3">Serving {location} & {county}</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-5">Roofing Company in {location}, FL</h1>
      <p class="text-lg text-gray-300 mb-8 max-w-xl mx-auto">
        Professional roof replacement, repair, and installation for one of Jacksonville's largest communities. Quality work at fair prices.
      </p>
      <div class="flex flex-wrap justify-center gap-4 mb-6">
        <a href={estimateUrl} target="_blank" rel="noopener" class="btn btn-primary px-6 py-3 font-semibold">Get Free Estimate</a>
        <a href={`tel:+1${phone.replace(/\D/g, '')}`} class="btn bg-white text-secondary hover:bg-gray-100 px-6 py-3 font-semibold">{phone}</a>
      </div>
      <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-300">
        <span>✓ Licensed & Insured</span>
        <span>✓ 5-Star Rated</span>
        <span>✓ Financing Available</span>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="bg-primary py-5">
    <div class="max-w-4xl mx-auto px-4">
      <div class="flex flex-wrap justify-center gap-10 text-secondary">
        <div class="text-center">
          <span class="text-3xl font-bold">500+</span>
          <span class="text-sm ml-2">Roofs</span>
        </div>
        <div class="text-center">
          <span class="text-3xl font-bold">15+</span>
          <span class="text-sm ml-2">Years</span>
        </div>
        <div class="text-center">
          <span class="text-3xl font-bold">5.0</span>
          <span class="text-sm ml-2">Star Rating</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-4">Your Local {location} Roofing Experts</h2>
      <p class="text-gray-600 mb-4">
        {location} is one of Jacksonville's most established neighborhoods, home to families who have lived here for generations alongside military personnel from nearby Naval Station Mayport. With housing stock ranging from the 1960s through today, {location} homes have diverse roofing needs.
      </p>
      <p class="text-gray-600">
        Many {location} homes are reaching the age where roof replacement is essential. Older roofing systems from decades past have served their purpose and now need upgrading with modern, energy-efficient materials. At Gimo's Roofing, we provide honest, quality roofing at fair prices with financing options to fit any budget.
      </p>
    </div>
  </section>

  <!-- Services -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Our Services</h2>

      <!-- Roofing Services -->
      <div class="mb-10">
        <div class="flex items-center gap-3 mb-5">
          <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
          </div>
          <h3 class="text-xl font-bold text-secondary">Roofing Services</h3>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Roof Replacement</h4>
            <p class="text-gray-600 text-sm">Complete tear-off and new installation with premium shingles, metal, or tile. Starting at $7,900.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Roof Repair</h4>
            <p class="text-gray-600 text-sm">Fast repairs for leaks, missing shingles, storm damage, and flashing issues. Same-day service available.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Storm Damage</h4>
            <p class="text-gray-600 text-sm">Emergency tarping, damage assessment, and insurance claim assistance for hurricane and storm damage.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Commercial Roofing</h4>
            <p class="text-gray-600 text-sm">TPO, EPDM, modified bitumen, and flat roof systems for businesses along University Boulevard and Merrill Road.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">New Construction</h4>
            <p class="text-gray-600 text-sm">Quality roofing for new home builds. We work with builders and contractors throughout {location}.</p>
          </div>
        </div>
      </div>

      <!-- Siding Services -->
      <div>
        <div class="flex items-center gap-3 mb-5">
          <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
          </div>
          <h3 class="text-xl font-bold text-secondary">Siding Services</h3>
        </div>
        <div class="grid sm:grid-cols-2 gap-5">
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Siding Installation</h4>
            <p class="text-gray-600 text-sm">Vinyl, Hardie board, and fiber cement siding to transform and protect your home's exterior.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Siding Repair</h4>
            <p class="text-gray-600 text-sm">Expert repairs for storm damage, aging, and wear to restore your home's curb appeal.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Why {location} Homeowners Choose Us</h2>
      <div class="space-y-6">
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Local & Experienced</h3>
            <p class="text-gray-600 text-sm">We're your neighbors. Locally owned and operated in Jacksonville with 15+ years of Florida roofing experience.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Affordable Quality</h3>
            <p class="text-gray-600 text-sm">Fair prices without cutting corners. We use premium products from GAF, Owens Corning, and other trusted brands.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Transparent Pricing</h3>
            <p class="text-gray-600 text-sm">No hidden fees or surprises. Detailed written estimates with clear pricing before any work begins.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Insurance Claim Help</h3>
            <p class="text-gray-600 text-sm">We document damage, provide estimates, and work with your adjuster to ensure fair storm damage coverage.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Materials -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Roofing Materials for {location} Homes</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$7,900+</div>
          <h3 class="font-bold text-secondary mb-2">Architectural Shingles</h3>
          <p class="text-gray-600 text-sm">Most popular choice. Wind resistant up to 130mph, 25-50 year warranty. Great for older {location} homes.</p>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$12,500+</div>
          <h3 class="font-bold text-secondary mb-2">Metal Roofing</h3>
          <p class="text-gray-600 text-sm">Superior durability, 40-70 year lifespan. Energy efficient, reflects heat to reduce cooling costs.</p>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$15,000+</div>
          <h3 class="font-bold text-secondary mb-2">Tile Roofing</h3>
          <p class="text-gray-600 text-sm">Classic Florida look. Concrete or clay, 50+ year lifespan. Excellent hurricane resistance.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Climate Section -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-6 text-center">Built for {location}'s Climate</h2>
      <div class="grid sm:grid-cols-2 gap-6">
        <div>
          <h3 class="font-bold text-secondary text-sm">UV Protection</h3>
          <p class="text-gray-600 text-sm">Materials with enhanced UV resistance to prevent premature aging from intense Florida sun.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">Rain Ready</h3>
          <p class="text-gray-600 text-sm">Proper drainage and sealed penetrations to handle 50+ inches of annual rainfall.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">Hurricane Rated</h3>
          <p class="text-gray-600 text-sm">All installations meet Florida Building Code for wind uplift. Impact-resistant options available.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">Humidity Resistant</h3>
          <p class="text-gray-600 text-sm">Algae-resistant shingles and proper ventilation to combat Florida's high humidity.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Common Questions</h2>
      <div class="space-y-3">
        {faqs.map((faq, index) => (
          <div class="border border-gray-200 rounded-xl overflow-hidden bg-white">
            <button class="faq-btn w-full px-5 py-4 text-left flex justify-between items-center hover:bg-gray-50" data-index={index}>
              <span class="font-semibold text-secondary text-sm pr-4">{faq.q}</span>
              <svg class="w-4 h-4 text-primary faq-icon transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="faq-answer hidden px-5 pb-4">
              <p class="text-gray-600 text-sm">{faq.a}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Neighborhoods -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h2 class="text-2xl font-bold text-secondary mb-4">Serving All {location} Neighborhoods</h2>
      <p class="text-gray-600 mb-6">
        From Fort Caroline and Regency Square to University Park and Arlington Hills, we've completed projects across every {location} community including Merrill Hills, Alderman Park, Monument Point, Wonderwood, and the Girvin Road area.
      </p>
    </div>
  </section>

  <!-- Nearby Areas -->
  <section class="py-10 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h3 class="font-bold text-secondary mb-4">Also Serving Nearby Areas</h3>
      <div class="flex flex-wrap justify-center gap-x-5 gap-y-2 text-sm">
        {nearbyAreas.map((area) => (
          <a href={area.href} class="text-primary hover:underline">{area.name}</a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-14 bg-primary">
    <div class="max-w-2xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-secondary mb-4">Get Your Free Estimate</h2>
      <p class="text-secondary/80 mb-6">Contact {location}'s trusted roofing company today. No obligation, no pressure. Just honest advice and fair pricing.</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={estimateUrl} target="_blank" rel="noopener" class="btn bg-secondary text-white hover:bg-secondary/90 px-8 py-3 font-semibold">Free Estimate</a>
        <a href={`tel:+1${phone.replace(/\D/g, '')}`} class="btn bg-white text-secondary hover:bg-gray-100 px-8 py-3 font-semibold">{phone}</a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.querySelectorAll('.faq-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const answer = btn.nextElementSibling;
      const icon = btn.querySelector('.faq-icon');
      document.querySelectorAll('.faq-answer').forEach(a => { if (a !== answer) a.classList.add('hidden'); });
      document.querySelectorAll('.faq-icon').forEach(i => { if (i !== icon) i.classList.remove('rotate-180'); });
      answer?.classList.toggle('hidden');
      icon?.classList.toggle('rotate-180');
    });
  });
</script>
