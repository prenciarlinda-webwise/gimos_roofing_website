---
import Layout from '../layouts/Layout.astro';

const location = "Neptune Beach";
const county = "Duval County";
const phone = "(904) 606-5313";
const estimateUrl = 'https://app.roofr.com/instant-estimator/4db598a1-7ca9-4594-a916-031741fecbfc/GimosRoofing';

const nearbyAreas = [
  { name: "Atlantic Beach", href: "/roofing-atlantic-beach-fl" },
  { name: "Jacksonville Beach", href: "/roofing-jacksonville-beach-fl" },
  { name: "Jacksonville", href: "/roofing-jacksonville-fl" },
  { name: "Ponte Vedra Beach", href: "/roofing-ponte-vedra-beach-fl" }
];

const faqs = [
  { q: `How much does a new roof cost in ${location}?`, a: `Roof replacement in ${location} typically ranges from $8,500 to $28,000+ depending on home size and materials. Coastal properties benefit from salt-resistant options. Financing available from $99/month.` },
  { q: `What roofing materials do you recommend for ${location}?`, a: `For ${location}'s beach environment, we recommend aluminum standing seam metal, impact-resistant shingles with algae protection, or concrete tile. All options resist salt corrosion and meet wind codes.` },
  { q: `Do you offer emergency roof repair?`, a: `Yes! We provide 24/7 emergency service for ${location} homes. Call ${phone} for immediate help with storm damage, leaks, or urgent repairs.` },
  { q: `How does living near the beach affect my roof?`, a: `Salt air accelerates wear on roofing materials and causes corrosion on metal components. Regular inspections and coastal-grade materials help extend your roof's lifespan in ${location}.` },
  { q: `Are you licensed and insured?`, a: `Absolutely. We're fully licensed in Florida with comprehensive liability and workers' compensation coverage. We're happy to provide documentation upon request.` },
  { q: `Do you help with insurance claims?`, a: `Yes. We document all damage, provide detailed estimates, and work directly with your insurance company to help ensure fair coverage for your ${location} home.` }
];

const schemaData = {
  "@context": "https://schema.org",
  "@type": "RoofingContractor",
  "name": "Gimo's Roofing - Neptune Beach",
  "url": "https://gimosroofing.com/roofing-neptune-beach-fl",
  "telephone": phone,
  "address": { "@type": "PostalAddress", "addressLocality": "Neptune Beach", "addressRegion": "FL", "addressCountry": "US" },
  "areaServed": { "@type": "City", "name": "Neptune Beach", "containedInPlace": { "@type": "AdministrativeArea", "name": "Duval County" } },
  "aggregateRating": { "@type": "AggregateRating", "ratingValue": "5", "reviewCount": "78" },
  "priceRange": "$$"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({ "@type": "Question", "name": faq.q, "acceptedAnswer": { "@type": "Answer", "text": faq.a } }))
};
---

<Layout
  title={`Roofing Company ${location} FL | Coastal Roof Repair & Replacement | Gimo's`}
  description={`Living near the beach means your roof takes a beating. We use salt-resistant materials and hurricane-rated installation designed for ${location}'s coastal conditions. Call ${phone} for a free estimate.`}
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero -->
  <section class="bg-secondary py-16">
    <div class="max-w-4xl mx-auto px-4 text-center text-white">
      <p class="text-primary font-semibold mb-3">Serving {location} & The Beaches</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-5">Roofing Company in {location}, FL</h1>
      <p class="text-lg text-gray-300 mb-8 max-w-xl mx-auto">
        Coastal roofing specialists serving {location}. Quality materials, expert installation, built for beach living.
      </p>
      <div class="flex flex-wrap justify-center gap-4 mb-6">
        <a href={estimateUrl} target="_blank" rel="noopener" class="btn btn-primary px-6 py-3 font-semibold">Get Free Estimate</a>
        <a href={`tel:+1${phone.replace(/\D/g, '')}`} class="btn bg-white text-secondary hover:bg-gray-100 px-6 py-3 font-semibold">{phone}</a>
      </div>
      <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-300">
        <span>✓ Licensed & Insured</span>
        <span>✓ 5-Star Rated</span>
        <span>✓ Coastal Experts</span>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="bg-primary py-5">
    <div class="max-w-4xl mx-auto px-4">
      <div class="flex flex-wrap justify-center gap-10 text-secondary">
        <div class="text-center"><span class="text-3xl font-bold">500+</span><span class="text-sm ml-2">Roofs</span></div>
        <div class="text-center"><span class="text-3xl font-bold">15+</span><span class="text-sm ml-2">Years</span></div>
        <div class="text-center"><span class="text-3xl font-bold">5.0</span><span class="text-sm ml-2">Star Rating</span></div>
      </div>
    </div>
  </section>

  <!-- Intro -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-4">Your {location} Roofing Experts</h2>
      <p class="text-gray-600 mb-4">
        {location} offers the perfect blend of beach living and small-town charm. But coastal life means your roof faces constant salt air, intense UV rays, high humidity, and the threat of tropical storms. At Gimo's Roofing, we specialize in protecting beach community homes with materials designed for these exact conditions.
      </p>
      <p class="text-gray-600">
        We've completed roofing projects throughout {location} and the surrounding Beaches area. Our team knows what works in this environment and delivers lasting results that protect your home and your investment.
      </p>
    </div>
  </section>

  <!-- Services -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Our Services</h2>

      <!-- Roofing Services -->
      <div class="mb-10">
        <div class="flex items-center gap-3 mb-5">
          <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
          </div>
          <h3 class="text-xl font-bold text-secondary">Roofing Services</h3>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Roof Replacement</h4>
            <p class="text-gray-600 text-sm">Complete tear-off with coastal-grade shingles, metal, or tile. Starting at $8,500.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Roof Repair</h4>
            <p class="text-gray-600 text-sm">Fix leaks, damaged shingles, flashing issues, and salt damage. Fast, reliable service.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Storm Damage</h4>
            <p class="text-gray-600 text-sm">24/7 emergency response. Tarping, repairs, and insurance claim assistance.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Inspections</h4>
            <p class="text-gray-600 text-sm">Annual coastal inspections to catch problems early. Free for {location} homeowners.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">New Construction</h4>
            <p class="text-gray-600 text-sm">Quality roofing for new builds throughout the Jacksonville Beaches.</p>
          </div>
        </div>
      </div>

      <!-- Siding Services -->
      <div>
        <div class="flex items-center gap-3 mb-5">
          <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
          </div>
          <h3 class="text-xl font-bold text-secondary">Siding Services</h3>
        </div>
        <div class="grid sm:grid-cols-2 gap-5">
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Siding Installation</h4>
            <p class="text-gray-600 text-sm">Salt-resistant Hardie board and vinyl siding for complete coastal exterior protection.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Siding Repair</h4>
            <p class="text-gray-600 text-sm">Expert repairs for salt damage, storm impact, and weather wear on your home's exterior.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Why {location} Homeowners Choose Us</h2>
      <div class="space-y-6">
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Beach Community Experience</h3>
            <p class="text-gray-600 text-sm">Years of experience serving {location} and the Beaches. We understand coastal roofing challenges inside and out.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Hurricane-Rated Installation</h3>
            <p class="text-gray-600 text-sm">Enhanced fastening patterns and wind-rated materials that meet Florida's strict coastal building codes.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Quality Materials</h3>
            <p class="text-gray-600 text-sm">Salt-resistant, UV-protected materials from trusted manufacturers. Built to last in coastal conditions.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Fair, Honest Pricing</h3>
            <p class="text-gray-600 text-sm">Detailed written estimates with no hidden fees. We explain exactly what you're paying for.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Materials -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Roofing Materials for {location}</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$8,500+</div>
          <h3 class="font-bold text-secondary mb-2">Coastal Shingles</h3>
          <p class="text-gray-600 text-sm">Impact-resistant architectural shingles with algae protection. 130mph wind rating.</p>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$14,500+</div>
          <h3 class="font-bold text-secondary mb-2">Metal Roofing</h3>
          <p class="text-gray-600 text-sm">Aluminum or Galvalume for superior salt resistance. 40-70 year lifespan.</p>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$17,000+</div>
          <h3 class="font-bold text-secondary mb-2">Tile Roofing</h3>
          <p class="text-gray-600 text-sm">Concrete or clay tile. Classic Florida look with 50+ year durability.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Climate Section -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-6 text-center">Built for {location}'s Climate</h2>
      <div class="grid sm:grid-cols-2 gap-6">
        <div>
          <h3 class="font-bold text-secondary text-sm">Salt Air Protection</h3>
          <p class="text-gray-600 text-sm">Corrosion-resistant materials and fasteners protect against constant salt exposure.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">UV Resistance</h3>
          <p class="text-gray-600 text-sm">Enhanced UV protection prevents premature aging from intense coastal sun.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">Hurricane Rated</h3>
          <p class="text-gray-600 text-sm">All installations meet Florida's coastal wind codes. Impact-resistant options available.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">Humidity Control</h3>
          <p class="text-gray-600 text-sm">Proper ventilation and algae-resistant materials prevent mold and mildew.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Common Questions</h2>
      <div class="space-y-3">
        {faqs.map((faq, index) => (
          <div class="border border-gray-200 rounded-xl overflow-hidden bg-white">
            <button class="faq-btn w-full px-5 py-4 text-left flex justify-between items-center hover:bg-gray-50" data-index={index}>
              <span class="font-semibold text-secondary text-sm pr-4">{faq.q}</span>
              <svg class="w-4 h-4 text-primary faq-icon transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="faq-answer hidden px-5 pb-4">
              <p class="text-gray-600 text-sm">{faq.a}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Neighborhoods -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h2 class="text-2xl font-bold text-secondary mb-4">Serving All {location} Areas</h2>
      <p class="text-gray-600 mb-6">
        From beachfront properties to the neighborhoods near the Intracoastal, we've completed roofing projects throughout {location} and the entire Jacksonville Beaches community.
      </p>
    </div>
  </section>

  <!-- Nearby Areas -->
  <section class="py-10 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h3 class="font-bold text-secondary mb-4">Also Serving Nearby Areas</h3>
      <div class="flex flex-wrap justify-center gap-x-5 gap-y-2 text-sm">
        {nearbyAreas.map((area) => (
          <a href={area.href} class="text-primary hover:underline">{area.name}</a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-14 bg-primary">
    <div class="max-w-2xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-secondary mb-4">Get Your Free Estimate</h2>
      <p class="text-secondary/80 mb-6">Contact {location}'s trusted roofing company today. No obligation, no pressure.</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={estimateUrl} target="_blank" rel="noopener" class="btn bg-secondary text-white hover:bg-secondary/90 px-8 py-3 font-semibold">Free Estimate</a>
        <a href={`tel:+1${phone.replace(/\D/g, '')}`} class="btn bg-white text-secondary hover:bg-gray-100 px-8 py-3 font-semibold">{phone}</a>
      </div>
    </div>
  </section>
</Layout>
