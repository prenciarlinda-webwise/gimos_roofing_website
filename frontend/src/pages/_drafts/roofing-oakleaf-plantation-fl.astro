---
import Layout from '../layouts/Layout.astro';

const location = "Oakleaf Plantation";
const county = "Clay County";
const parentCity = null;
const estimateUrl = 'https://app.roofr.com/instant-estimator/4db598a1-7ca9-4594-a916-031741fecbfc/GimosRoofing';
const financingUrl = 'https://application.enerbank.com/#/link?spnum=8007747598&cid=118584&promo=DEL2625&loamt=';

const neighborhoods = [
  "Oakleaf Plantation", "Oakleaf Village", "Whitfield", "Cannon's Point",
  "The Preserve at Oakleaf", "Oakleaf Commons", "Eagle Landing", "Briar Oaks",
  "Pebble Creek", "Stone Creek", "Kindlewood", "Argyle Forest"
];

const services = [
  { title: "Roof Replacement", href: "/services/roof-replacement", description: "Complete roof replacement for Oakleaf Plantation homes. We install quality roofing systems designed for Florida's climate, working within community guidelines. Starting at $7,900 with financing available." },
  { title: "Roof Repair", href: "/services/roof-repair", description: "Fast, reliable roof repairs for leaks, storm damage, missing shingles, and general wear. Our Oakleaf team responds quickly to protect your home. Emergency services available 24/7." },
  { title: "New Construction Roofing", href: "/services/new-construction-roofing", description: "Expert roof installation for new construction in Oakleaf's continuing growth. We work with builders and homeowners to deliver quality roofing that meets Florida codes." },
  { title: "Commercial Roofing", href: "/services/commercial-roofing", description: "Professional commercial roofing for Oakleaf businesses in the Town Center and throughout the community. Flat roofs, TPO, and more." },
  { title: "Siding Installation", href: "/services/siding-installation", description: "Transform your Oakleaf home's exterior with quality siding. Vinyl, James Hardie fiber cement, and other durable options available." },
  { title: "Siding Repair", href: "/services/siding-repair", description: "Expert siding repairs to restore and protect your Oakleaf home's exterior from Florida's weather." }
];

const faqs = [
  {
    question: `How much does roof replacement cost in ${location}?`,
    answer: `Roof replacement in ${location} typically costs between $8,500 and $28,000+ depending on your home's size, roof complexity, and materials chosen. The average ${location} home (2,200-3,000 sq ft) runs $12,000-$17,000 with architectural shingles. We provide free detailed estimates and offer financing with payments as low as $99/month.`
  },
  {
    question: `What roofing materials are best for ${location} homes?`,
    answer: `${location} homes perform well with impact-resistant architectural shingles (GAF Timberline HDZ, Owens Corning Duration Storm) which handle Florida's heat, humidity, and storms. These materials meet community aesthetic standards while providing excellent protection.`
  },
  {
    question: `Do you work with ${location} HOA?`,
    answer: `Yes! We're experienced working within ${location}'s HOA guidelines. We understand the architectural review process, approved color palettes, and community standards. We provide all documentation needed for HOA approval.`
  },
  {
    question: `Do you offer emergency roof repair in ${location}?`,
    answer: `Yes! We provide 24/7 emergency roof repair throughout ${location}. Storm damage, active leaks, or fallen tree limbs - call us immediately at (904) 606-5313. We'll dispatch a team to tarp and secure your roof.`
  },
  {
    question: `How long does a roof replacement take in ${location}?`,
    answer: `Most ${location} roof replacements are completed in 1-3 days. Larger homes or complex roofs may take slightly longer. We work efficiently while maintaining quality and clean up thoroughly each day.`
  },
  {
    question: `Do you help with insurance claims for ${location} storm damage?`,
    answer: `Absolutely! We have extensive experience with insurance claims throughout ${location}. We document all damage with detailed photos, provide accurate repair estimates, and work directly with your adjuster to ensure fair coverage.`
  },
  {
    question: `Are you licensed to work in ${location}?`,
    answer: `Yes! Gimo's Roofing is fully licensed by the State of Florida and carries comprehensive liability and workers' compensation insurance. We've completed many roofing projects throughout ${location} and ${county}.`
  },
  {
    question: `What warranties do you offer on ${location} roofing?`,
    answer: `We provide manufacturer warranties on materials (typically 25-50 years depending on product) plus our own workmanship warranty. We stand behind every ${location} installation.`
  },
  {
    question: `When should I replace my ${location} home's roof?`,
    answer: `Many ${location} homes were built in the 2000s and 2010s. If your roof is 15-20+ years old, it's time for an inspection. Signs it's time to replace: missing or curling shingles, granule loss, visible wear, or leaks. We provide free inspections.`
  },
  {
    question: `Do you offer financing for ${location} homeowners?`,
    answer: `Yes! Through EnerBank USA, qualified ${location} homeowners can get flexible financing with competitive rates. Payments as low as $99/month make a quality roof affordable for any budget.`
  }
];

const schemaData = {
  "@context": "https://schema.org",
  "@type": "RoofingContractor",
  "name": `Gimo's Roofing - ${location}`,
  "description": `Professional roofing company serving ${location}, ${county} FL. Roof replacement, repair, and installation for this master-planned community.`,
  "url": `https://gimosroofing.com/roofing-oakleaf-plantation-fl`,
  "telephone": "(904) 606-5313",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": location,
    "addressRegion": "FL",
    "addressCountry": "US"
  },
  "areaServed": {
    "@type": "Place",
    "name": `${location}, FL`,
    "containedInPlace": { "@type": "AdministrativeArea", "name": county }
  },
  "priceRange": "$$"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": { "@type": "Answer", "text": faq.answer }
  }))
};
---

<Layout
  title={`Roofing Company ${location} FL | ${county} Roof Repair & Replacement | Gimo's Roofing`}
  description={`Your ${location} home deserves a roofer who knows the community's standards. We handle HOA approvals, use quality materials, and leave your yard cleaner than we found it. Call (904) 606-5313.`}
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-secondary/95 via-secondary/85 to-secondary/70"></div>
    <div class="relative max-w-7xl mx-auto px-4">
      <nav class="text-sm mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center">
          <li><a href="/" class="text-gray-300 hover:text-primary">Home</a></li>
          <li><span class="mx-2 text-gray-400">/</span></li>
          <li><a href="/service-areas" class="text-gray-300 hover:text-primary">Service Areas</a></li>
          <li><span class="mx-2 text-gray-400">/</span></li>
          <li><span class="text-primary">{location}</span></li>
        </ol>
      </nav>
      <div class="max-w-3xl text-white">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Trusted Roofing Company in <span class="text-primary">{location}, FL</span>
        </h1>
        <p class="text-xl text-gray-200 mb-4">
          {location}'s premier roofing contractor. Professional roof replacement, repair, and installation for this popular master-planned community.
        </p>
        <p class="text-lg text-gray-300 mb-8">
          HOA-experienced and quality-focused, we deliver roofing that meets {location}'s standards.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href={estimateUrl} target="_blank" rel="noopener noreferrer" class="btn btn-primary text-lg px-8 py-3">
            Get Free Estimate
          </a>
          <a href="tel:+19046065313" class="btn bg-white text-secondary hover:bg-gray-100 text-lg px-8 py-3">
            (904) 606-5313
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-secondary mb-6">{location}'s Roofing Experts</h2>
          <p class="text-gray-600 mb-4">
            {location} is one of {county}'s largest and most popular master-planned communities. With excellent schools, resort-style amenities, and beautiful homes, families here take pride in their properties and expect quality workmanship.
          </p>
          <p class="text-gray-600 mb-4">
            Many {location} homes were built in the 2000s and 2010s, meaning roofs are now reaching the age where replacement becomes necessary. If your roof is 15+ years old and showing signs of wear, it's time for an inspection.
          </p>
          <p class="text-gray-600 mb-6">
            Gimo's Roofing understands {location}'s HOA requirements and aesthetic standards. We work within community guidelines, help with the approval process, and deliver quality roofing that meets both your needs and the community's standards.
          </p>
          <div class="flex flex-wrap gap-4">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span class="text-gray-700">Licensed & Insured</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span class="text-gray-700">HOA Experienced</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span class="text-gray-700">Financing Available</span>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 rounded-2xl p-8">
          <h3 class="text-xl font-bold text-secondary mb-4">Why {location} Chooses Gimo's</h3>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              <div><strong class="text-secondary">HOA Compliance</strong><p class="text-gray-600 text-sm">We know the approval process and standards</p></div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              <div><strong class="text-secondary">Quality Materials</strong><p class="text-gray-600 text-sm">GAF, Owens Corning, and premium options</p></div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              <div><strong class="text-secondary">Respectful Service</strong><p class="text-gray-600 text-sm">Clean jobsites, minimal disruption</p></div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              <div><strong class="text-secondary">Insurance Claim Experts</strong><p class="text-gray-600 text-sm">We help with storm damage claims</p></div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Our Services</h2>

      <!-- Roofing Services -->
      <div class="mb-10">
        <div class="flex items-center gap-3 mb-5">
          <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
          </div>
          <h3 class="text-xl font-bold text-secondary">Roofing Services</h3>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Roof Replacement</h4>
            <p class="text-gray-600 text-sm">Complete roof replacement for {location} homes. Quality roofing systems designed for Florida's climate. Starting at $7,900.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Roof Repair</h4>
            <p class="text-gray-600 text-sm">Fast, reliable roof repairs for leaks, storm damage, and general wear. Emergency services available 24/7.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">New Construction</h4>
            <p class="text-gray-600 text-sm">Expert roof installation for new construction. We work with builders and homeowners to deliver quality roofing.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Storm Damage</h4>
            <p class="text-gray-600 text-sm">Emergency tarping, damage assessment, and insurance claim assistance for hurricane and storm damage.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Commercial Roofing</h4>
            <p class="text-gray-600 text-sm">Professional commercial roofing for {location} businesses. Flat roofs, TPO, and more.</p>
          </div>
        </div>
      </div>

      <!-- Siding Services -->
      <div>
        <div class="flex items-center gap-3 mb-5">
          <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
          </div>
          <h3 class="text-xl font-bold text-secondary">Siding Services</h3>
        </div>
        <div class="grid sm:grid-cols-2 gap-5">
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Siding Installation</h4>
            <p class="text-gray-600 text-sm">Transform your home's exterior with quality siding. Vinyl, James Hardie fiber cement, and other durable options.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Siding Repair</h4>
            <p class="text-gray-600 text-sm">Expert siding repairs to restore and protect your home's exterior from Florida's weather.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Neighborhoods Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-secondary mb-4">{location} Areas We Serve</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">We provide roofing services throughout {location} and surrounding areas.</p>
      </div>
      <div class="flex flex-wrap justify-center gap-3">
        {neighborhoods.map((area) => (
          <span class="px-4 py-2 bg-gray-100 rounded-full text-gray-700">{area}</span>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-secondary mb-4">{location} Roofing FAQ</h2>
        <p class="text-gray-600 text-lg">Answers to common roofing questions from {location} homeowners.</p>
      </div>
      <div class="space-y-3">
        {faqs.map((faq, index) => (
          <div class="border border-gray-200 rounded-xl overflow-hidden bg-white">
            <button class="faq-btn w-full px-5 py-4 text-left flex justify-between items-center hover:bg-gray-50" data-index={index}>
              <span class="font-semibold text-secondary text-sm pr-4">{faq.question}</span>
              <svg class="w-4 h-4 text-primary faq-icon transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="faq-answer hidden px-5 pb-4">
              <p class="text-gray-600 text-sm">{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Nearby Areas -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-10">
        <h2 class="text-3xl font-bold text-secondary mb-4">Nearby Service Areas</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">We also serve these neighboring {county} communities.</p>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-3">
        <a href="/roofing-orange-park-fl" class="group bg-gray-50 rounded-lg p-3 text-center hover:bg-primary/10 transition-colors">
          <h3 class="font-semibold text-secondary group-hover:text-primary text-sm">Orange Park</h3>
        </a>
        <a href="/roofing-fleming-island-fl" class="group bg-gray-50 rounded-lg p-3 text-center hover:bg-primary/10 transition-colors">
          <h3 class="font-semibold text-secondary group-hover:text-primary text-sm">Fleming Island</h3>
        </a>
        <a href="/roofing-middleburg-fl" class="group bg-gray-50 rounded-lg p-3 text-center hover:bg-primary/10 transition-colors">
          <h3 class="font-semibold text-secondary group-hover:text-primary text-sm">Middleburg</h3>
        </a>
        <a href="/roofing-green-cove-springs-fl" class="group bg-gray-50 rounded-lg p-3 text-center hover:bg-primary/10 transition-colors">
          <h3 class="font-semibold text-secondary group-hover:text-primary text-sm">Green Cove Springs</h3>
        </a>
        <a href="/service-areas" class="group bg-primary/10 rounded-lg p-3 text-center hover:bg-primary/20 transition-colors">
          <h3 class="font-semibold text-primary text-sm">All Areas &rarr;</h3>
        </a>
      </div>
      <div class="mt-6 text-center">
        <p class="text-gray-600 text-sm">Learn more: <a href="/about" class="text-primary hover:underline">About Us</a> | <a href="/gallery" class="text-primary hover:underline">Our Work</a> | <a href="/contact" class="text-primary hover:underline">Contact</a></p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-secondary mb-4">
        Ready for a New Roof in {location}?
      </h2>
      <p class="text-secondary/80 text-lg mb-8">
        Get a free, no-obligation estimate from {location}'s trusted roofing company. Quality workmanship, fair pricing, and financing options available.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={estimateUrl} target="_blank" rel="noopener noreferrer" class="btn bg-secondary text-white hover:bg-secondary/90 text-lg px-8 py-3">
          Get Your Free Estimate
        </a>
        <a href={financingUrl} target="_blank" rel="noopener noreferrer" class="btn bg-white text-secondary hover:bg-gray-100 text-lg px-8 py-3">
          Apply for Financing
        </a>
      </div>
      <p class="mt-6 text-secondary/70">
        Or call us: <a href="tel:+19046065313" class="text-secondary font-bold hover:underline">(904) 606-5313</a>
      </p>
    </div>
  </section>
</Layout>
