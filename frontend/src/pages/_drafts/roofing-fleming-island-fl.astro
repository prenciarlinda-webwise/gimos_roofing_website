---
import Layout from '../layouts/Layout.astro';

const location = "Fleming Island";
const county = "Clay County";
const phone = "(904) 606-5313";
const estimateUrl = 'https://app.roofr.com/instant-estimator/4db598a1-7ca9-4594-a916-031741fecbfc/GimosRoofing';

const nearbyAreas = [
  { name: "Orange Park", href: "/roofing-orange-park-fl" },
  { name: "Green Cove Springs", href: "/roofing-green-cove-springs-fl" },
  { name: "Middleburg", href: "/roofing-middleburg-fl" },
  { name: "Oakleaf Plantation", href: "/roofing-oakleaf-plantation-fl" },
  { name: "Jacksonville", href: "/roofing-jacksonville-fl" },
  { name: "Mandarin", href: "/roofing-mandarin-fl" }
];

const faqs = [
  { q: `How much does a new roof cost in ${location}?`, a: `Roof replacement in ${location} typically costs between $8,500 and $35,000 depending on size, materials, and roof complexity. Larger ${location} homes often fall in the $15,000-$25,000 range with quality architectural shingles. We offer financing from $99/month.` },
  { q: `Do you work with ${location} HOAs?`, a: `Yes! We're experienced with Eagle Harbor, Fleming Island Plantation, and other community HOA requirements. We help select HOA-approved materials and provide documentation for architectural review.` },
  { q: `What roofing materials are popular in ${location}?`, a: `${location} homeowners often choose premium materials. Architectural shingles (GAF, Owens Corning) are most popular. Designer shingles, concrete tile, and metal roofing are chosen for higher-end homes.` },
  { q: `How long does roof replacement take?`, a: `Most ${location} roofs are completed in 2-4 days depending on home size. We coordinate with you to minimize disruption and maintain a clean worksite.` },
  { q: `Do you offer emergency roof repair?`, a: `Yes! We provide 24/7 emergency service throughout ${location} and ${county}. Call ${phone} for immediate assistance with storm damage or leaks.` },
  { q: `Do you help with insurance claims?`, a: `Absolutely. We document damage thoroughly, provide detailed estimates, and work directly with your adjuster to ensure fair coverage for ${location} homeowners.` }
];

const schemaData = {
  "@context": "https://schema.org",
  "@type": "RoofingContractor",
  "name": `Gimo's Roofing - ${location}`,
  "url": `https://gimosroofing.com/roofing-fleming-island-fl`,
  "telephone": phone,
  "address": { "@type": "PostalAddress", "addressLocality": location, "addressRegion": "FL", "addressCountry": "US" },
  "aggregateRating": { "@type": "AggregateRating", "ratingValue": "5", "reviewCount": "78" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({ "@type": "Question", "name": faq.q, "acceptedAnswer": { "@type": "Answer", "text": faq.a } }))
};
---

<Layout
  title={`Roofing Company ${location} FL | Premium Roof Replacement ${county} | Gimo's Roofing`}
  description={`${location} homeowners trust us for roof replacements that pass HOA inspection the first time. We know ${county}'s requirements inside and out. Call ${phone} for your free estimate.`}
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero -->
  <section class="bg-secondary py-16">
    <div class="max-w-4xl mx-auto px-4 text-center text-white">
      <p class="text-primary font-semibold mb-3">Serving {location} & {county}</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-5">Premium Roofing in {location}, FL</h1>
      <p class="text-lg text-gray-300 mb-8 max-w-xl mx-auto">
        Professional roof replacement, repair, and installation for {location}'s upscale homes. Quality craftsmanship you can trust.
      </p>
      <div class="flex flex-wrap justify-center gap-4 mb-6">
        <a href={estimateUrl} target="_blank" rel="noopener" class="btn btn-primary px-6 py-3 font-semibold">Get Free Estimate</a>
        <a href={`tel:+1${phone.replace(/\D/g, '')}`} class="btn bg-white text-secondary hover:bg-gray-100 px-6 py-3 font-semibold">{phone}</a>
      </div>
      <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-300">
        <span>✓ HOA Experienced</span>
        <span>✓ 5-Star Rated</span>
        <span>✓ Premium Materials</span>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="bg-primary py-5">
    <div class="max-w-4xl mx-auto px-4">
      <div class="flex flex-wrap justify-center gap-10 text-secondary">
        <div class="text-center">
          <span class="text-3xl font-bold">500+</span>
          <span class="text-sm ml-2">Roofs</span>
        </div>
        <div class="text-center">
          <span class="text-3xl font-bold">15+</span>
          <span class="text-sm ml-2">Years</span>
        </div>
        <div class="text-center">
          <span class="text-3xl font-bold">5.0</span>
          <span class="text-sm ml-2">Star Rating</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-4">{location}'s Premier Roofing Contractor</h2>
      <p class="text-gray-600 mb-4">
        {location} is one of Northeast Florida's most prestigious communities. With master-planned neighborhoods like Eagle Harbor and Fleming Island Plantation, excellent schools, and resort-style amenities, homeowners here take pride in their properties.
      </p>
      <p class="text-gray-600">
        Your {location} home deserves a roofing contractor who understands the community's standards. We work with HOAs, understand architectural guidelines, and use premium materials that enhance your home's appearance while providing lasting protection against Florida's demanding climate.
      </p>
    </div>
  </section>

  <!-- Services -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Our Services</h2>

      <!-- Roofing Services -->
      <div class="mb-10">
        <div class="flex items-center gap-3 mb-5">
          <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
          </div>
          <h3 class="text-xl font-bold text-secondary">Roofing Services</h3>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Premium Roof Replacement</h4>
            <p class="text-gray-600 text-sm">Complete installation with designer shingles, tile, or metal to match your home's style. Starting at $8,500.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Roof Repair</h4>
            <p class="text-gray-600 text-sm">Expert repairs for leaks, storm damage, and general wear. 24/7 emergency service available.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Storm Damage</h4>
            <p class="text-gray-600 text-sm">Emergency tarping, damage assessment, and insurance claim assistance for hurricane and storm damage.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Commercial Roofing</h4>
            <p class="text-gray-600 text-sm">TPO, metal, and modified bitumen systems for {location} businesses and commercial properties.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">New Construction</h4>
            <p class="text-gray-600 text-sm">Quality roofing for custom homes. We work with builders throughout {location}.</p>
          </div>
        </div>
      </div>

      <!-- Siding Services -->
      <div>
        <div class="flex items-center gap-3 mb-5">
          <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
          </div>
          <h3 class="text-xl font-bold text-secondary">Siding Services</h3>
        </div>
        <div class="grid sm:grid-cols-2 gap-5">
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Siding Installation</h4>
            <p class="text-gray-600 text-sm">James Hardie fiber cement, quality vinyl, and engineered wood options to enhance your home.</p>
          </div>
          <div class="bg-white p-5 rounded-lg shadow-sm">
            <h4 class="font-bold text-secondary mb-2">Siding Repair</h4>
            <p class="text-gray-600 text-sm">Expert repairs for storm damage, aging, and wear to restore your home's curb appeal.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Why {location} Homeowners Choose Us</h2>
      <div class="space-y-6">
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">HOA Compliance Experts</h3>
            <p class="text-gray-600 text-sm">We navigate Eagle Harbor, Fleming Island Plantation, and other HOA requirements with ease.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Designer Material Options</h3>
            <p class="text-gray-600 text-sm">Tile, designer shingles, premium metal roofing. Options for every architectural style.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Professional Crews</h3>
            <p class="text-gray-600 text-sm">Respectful, clean, and efficient workmanship. We treat your property with care.</p>
          </div>
        </div>
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </div>
          <div>
            <h3 class="font-bold text-secondary">Comprehensive Warranties</h3>
            <p class="text-gray-600 text-sm">Materials and workmanship protected. Enhanced warranty options available from GAF and Owens Corning.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Materials -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Premium Materials for {location} Homes</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$8,500+</div>
          <h3 class="font-bold text-secondary mb-2">Designer Shingles</h3>
          <p class="text-gray-600 text-sm">Premium architectural shingles with enhanced aesthetics. 25-50 year warranties. Multiple colors and profiles.</p>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$14,000+</div>
          <h3 class="font-bold text-secondary mb-2">Metal Roofing</h3>
          <p class="text-gray-600 text-sm">Standing seam and premium metal panels. 40-70 year lifespan. Energy efficient and storm resistant.</p>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-primary mb-2">$18,000+</div>
          <h3 class="font-bold text-secondary mb-2">Tile Roofing</h3>
          <p class="text-gray-600 text-sm">Concrete or clay tile for a distinctive look. 50+ year lifespan. Excellent hurricane resistance.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Climate Section -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-6 text-center">Built for {location}'s Climate</h2>
      <div class="grid sm:grid-cols-2 gap-6">
        <div>
          <h3 class="font-bold text-secondary text-sm">UV Protection</h3>
          <p class="text-gray-600 text-sm">Materials with enhanced UV resistance to prevent premature aging from intense Florida sun.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">Rain Ready</h3>
          <p class="text-gray-600 text-sm">Proper drainage and sealed penetrations to handle 50+ inches of annual rainfall.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">Hurricane Rated</h3>
          <p class="text-gray-600 text-sm">All installations meet Florida Building Code for wind uplift. Impact-resistant options available.</p>
        </div>
        <div>
          <h3 class="font-bold text-secondary text-sm">Humidity Resistant</h3>
          <p class="text-gray-600 text-sm">Algae-resistant shingles and proper ventilation to combat Florida's high humidity.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Common Questions</h2>
      <div class="space-y-3">
        {faqs.map((faq, index) => (
          <div class="border border-gray-200 rounded-xl overflow-hidden bg-white">
            <button class="faq-btn w-full px-5 py-4 text-left flex justify-between items-center hover:bg-gray-50" data-index={index}>
              <span class="font-semibold text-secondary text-sm pr-4">{faq.q}</span>
              <svg class="w-4 h-4 text-primary faq-icon transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="faq-answer hidden px-5 pb-4">
              <p class="text-gray-600 text-sm">{faq.a}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Neighborhoods -->
  <section class="py-14">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h2 class="text-2xl font-bold text-secondary mb-4">Serving All {location} Communities</h2>
      <p class="text-gray-600 mb-6">
        We provide roofing services throughout {location} including Eagle Harbor, Fleming Island Plantation, Pace Island, Margaret's Walk, The Cottages, Heritage Landing, Harbour Cove, Villages of Fleming Island, and all surrounding neighborhoods.
      </p>
    </div>
  </section>

  <!-- Nearby Areas -->
  <section class="py-10 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h3 class="font-bold text-secondary mb-4">Also Serving Nearby Areas</h3>
      <div class="flex flex-wrap justify-center gap-x-5 gap-y-2 text-sm">
        {nearbyAreas.map((area) => (
          <a href={area.href} class="text-primary hover:underline">{area.name}</a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-14 bg-primary">
    <div class="max-w-2xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-secondary mb-4">Elevate Your {location} Home</h2>
      <p class="text-secondary/80 mb-6">Get a free estimate from {location}'s trusted premium roofing contractor. Quality materials, expert installation, and financing available.</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={estimateUrl} target="_blank" rel="noopener" class="btn bg-secondary text-white hover:bg-secondary/90 px-8 py-3 font-semibold">Free Estimate</a>
        <a href={`tel:+1${phone.replace(/\D/g, '')}`} class="btn bg-white text-secondary hover:bg-gray-100 px-8 py-3 font-semibold">{phone}</a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.querySelectorAll('.faq-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const answer = btn.nextElementSibling;
      const icon = btn.querySelector('.faq-icon');
      document.querySelectorAll('.faq-answer').forEach(a => { if (a !== answer) a.classList.add('hidden'); });
      document.querySelectorAll('.faq-icon').forEach(i => { if (i !== icon) i.classList.remove('rotate-180'); });
      answer?.classList.toggle('hidden');
      icon?.classList.toggle('rotate-180');
    });
  });
</script>
