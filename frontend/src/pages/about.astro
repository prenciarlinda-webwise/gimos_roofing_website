p---
import Layout from '../layouts/Layout.astro';

const estimateUrl = 'https://app.roofr.com/instant-estimator/4db598a1-7ca9-4594-a916-031741fecbfc/GimosRoofing';

const values = [
  {
    title: "Quality Craftsmanship",
    description: "We take pride in our work and never cut corners. Every project receives the same attention to detail.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" /></svg>`
  },
  {
    title: "Customer First",
    description: "Your satisfaction is our priority. We communicate clearly and work around your schedule.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`
  },
  {
    title: "Honest Pricing",
    description: "No hidden fees or surprise charges. We provide detailed, transparent estimates upfront.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`
  },
  {
    title: "Local Expertise",
    description: "We know Jacksonville's climate and building codes. Our solutions are designed for Florida.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>`
  }
];

const stats = [
  { number: "500+", label: "Projects Completed" },
  { number: "5.0", label: "Star Rating" },
  { number: "100%", label: "Satisfaction Rate" },
  { number: "24/7", label: "Emergency Service" }
];

const schemaData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "mainEntity": {
    "@type": "RoofingContractor",
    "name": "Gimo's Roofing",
    "description": "Jacksonville's trusted roofing contractor providing quality craftsmanship and exceptional customer service.",
    "foundingDate": "2020",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "33 24th Street East",
      "addressLocality": "Jacksonville",
      "addressRegion": "FL",
      "postalCode": "32206"
    },
    "telephone": "+1-904-606-5313",
    "email": "contact@gimosroofing.com",
    "areaServed": {
      "@type": "GeoCircle",
      "geoMidpoint": {
        "@type": "GeoCoordinates",
        "latitude": 30.3322,
        "longitude": -81.6557
      },
      "geoRadius": "50 mi"
    }
  }
};
---

<Layout
  title="About Gimo's Roofing | Jacksonville FL Roofing Contractor"
  description="Learn about Gimo's Roofing - Jacksonville's trusted roofing contractor. Discover our commitment to quality, customer service, and community."
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary to-secondary/90 text-white py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-3xl md:text-4xl font-bold mb-4">
          About Gimo's Roofing
        </h1>
        <p class="text-lg text-gray-200">
          Jacksonville's trusted roofing contractor, committed to quality craftsmanship and exceptional customer service.
        </p>
      </div>
    </div>
  </section>

  <!-- Our Story -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-4">Our Story</h2>
          <p class="text-gray-600 mb-4">
            Gimo's Renovation & Roofing was founded with a simple mission: to provide Jacksonville homeowners and businesses with roofing services they can trust at prices they can afford.
          </p>
          <p class="text-gray-600 mb-4">
            As a locally owned and operated company, we understand the unique challenges Florida's climate presents to roofing systems. From intense summer heat to hurricane season storms, we've seen it all and know how to protect your property.
          </p>
          <p class="text-gray-600 mb-4">
            Our team brings together experienced professionals who share a passion for quality workmanship. We treat every project—whether it's a small repair or a complete roof replacement—with the same dedication and attention to detail.
          </p>
          <p class="text-gray-600">
            Today, we're proud to be one of Jacksonville's most trusted roofing contractors, with 5-star ratings across Google, Yelp, and Thumbtack. Our growth has been built on referrals from satisfied customers who appreciate our honest approach and quality results.
          </p>
        </div>
        <div class="rounded-2xl aspect-video overflow-hidden shadow-xl">
          <img src="/images/gimos-roofing-company-van-jobsite.webp" alt="Gimo's Roofing team at job site" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-12 bg-primary">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-secondary mb-1">{stat.number}</div>
            <div class="text-secondary/80 text-sm">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Values -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-3">Our Values</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          These core principles guide everything we do at Gimo's Roofing.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {values.map((value) => (
          <div class="bg-white rounded-xl shadow-md p-6 text-center hover:shadow-lg transition-shadow">
            <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-4 text-primary">
              <Fragment set:html={value.icon} />
            </div>
            <h3 class="font-bold text-secondary mb-2">{value.title}</h3>
            <p class="text-gray-600 text-sm">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="rounded-2xl aspect-video overflow-hidden shadow-xl">
          <img src="/images/roofing-crew-installation-action.webp" alt="Gimo's Roofing crew working on installation" class="w-full h-full object-cover" />
        </div>
        <div>
          <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-4">
            Why Jacksonville Trusts Us
          </h2>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <div>
                <h4 class="font-semibold text-secondary">Licensed & Insured</h4>
                <p class="text-gray-600 text-sm">Fully licensed Florida roofing contractor with comprehensive insurance coverage for your protection.</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <div>
                <h4 class="font-semibold text-secondary">5-Star Reviews</h4>
                <p class="text-gray-600 text-sm">Consistently rated 5 stars on Google, Yelp, and Thumbtack by satisfied customers.</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <div>
                <h4 class="font-semibold text-secondary">Quality Materials</h4>
                <p class="text-gray-600 text-sm">We use only premium materials from trusted manufacturers with strong warranties.</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <div>
                <h4 class="font-semibold text-secondary">Free Estimates</h4>
                <p class="text-gray-600 text-sm">Get a free, no-obligation estimate for your project with transparent, honest pricing.</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <div>
                <h4 class="font-semibold text-secondary">Financing Available</h4>
                <p class="text-gray-600 text-sm">Flexible financing options to make your roofing project affordable.</p>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-3">
        Ready to Work With Us?
      </h2>
      <p class="text-secondary/80 mb-6">
        Experience the Gimo's difference. Get a free estimate for your roofing project today.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={estimateUrl} target="_blank" rel="noopener noreferrer" class="btn bg-secondary text-white hover:bg-secondary/90">
          Get Your Free Estimate
        </a>
        <a href="tel:+19046065313" class="btn bg-white text-secondary hover:bg-gray-100">
          Call (904) 606-5313
        </a>
      </div>
    </div>
  </section>
</Layout>