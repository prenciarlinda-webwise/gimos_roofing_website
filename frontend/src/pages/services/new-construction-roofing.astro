---
import Layout from '../../layouts/Layout.astro';

const estimateUrl = 'https://app.roofr.com/instant-estimator/9ef814fe-1efa-4e6b-aaed-45ff7eda2015/GimosRoofing/welcome-question';
const financingUrl = 'https://application.enerbank.com/#/link?spnum=8007747598&cid=118584&promo=DEL2625&loamt=';

const benefits = [
  {
    title: "Built from Scratch",
    description: "Your new home deserves a roof installed right the first time. We work from bare framing to finished product.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>`
  },
  {
    title: "Builder Coordination",
    description: "We coordinate seamlessly with your general contractor and other trades to keep your project on schedule.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`
  },
  {
    title: "Code Compliance",
    description: "We ensure your new roof meets all current Florida building codes and hurricane requirements.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`
  },
  {
    title: "Warranty Protection",
    description: "Full manufacturer warranties on materials plus our workmanship guarantee for complete peace of mind.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`
  }
];

const roofTypes = [
  {
    name: "Asphalt Shingles",
    description: "The most popular choice for new construction. Affordable, durable, and available in many colors and architectural styles to complement your new home design.",
    lifespan: "25-30 years",
    features: ["Cost-effective", "Wide color selection", "Architectural styles", "Quick installation"]
  },
  {
    name: "Metal Roofing",
    description: "Premium choice for new Florida homes. Standing seam and metal tiles provide superior hurricane protection and energy efficiency for decades.",
    lifespan: "50-70 years",
    features: ["Hurricane rated", "Energy efficient", "Low maintenance", "Modern aesthetics"]
  },
  {
    name: "Tile Roofing",
    description: "Classic choice for Mediterranean and Spanish-style new construction. Concrete and clay tiles add timeless beauty and exceptional durability.",
    lifespan: "50+ years",
    features: ["Fire resistant", "Timeless appeal", "Highly durable", "Increases home value"]
  }
];

const process = [
  { step: 1, title: "Blueprint Review", description: "We review your construction plans and recommend the best roofing system for your new home." },
  { step: 2, title: "Material Selection", description: "Choose from premium roofing materials that match your home's design and budget." },
  { step: 3, title: "Scheduling", description: "We coordinate with your builder to schedule installation at the optimal point in construction." },
  { step: 4, title: "Deck Preparation", description: "Install ice & water shield, underlayment, and proper ventilation before roofing." },
  { step: 5, title: "Installation", description: "Expert installation of your chosen roofing system with attention to every detail." },
  { step: 6, title: "Final Inspection", description: "Complete inspection to ensure everything meets code and our quality standards." }
];

const faqs = [
  {
    question: "When should roofing be installed during new construction?",
    answer: "Roofing is typically installed after the framing is complete and the roof decking is in place, but before interior work begins. We coordinate with your builder to ensure proper timing and protect the structure from weather."
  },
  {
    question: "Do you work with home builders and general contractors?",
    answer: "Yes! We regularly partner with home builders and general contractors throughout Jacksonville. We understand construction schedules and coordinate our work to keep your project on track."
  },
  {
    question: "What roofing materials are best for new construction in Florida?",
    answer: "For Florida's climate, we recommend asphalt architectural shingles for budget-friendly projects, metal roofing for maximum durability and energy efficiency, or tile for a classic Florida aesthetic. We'll help you choose based on your design, budget, and goals."
  },
  {
    question: "Does new construction roofing include gutters?",
    answer: "Gutter installation can be included in your roofing package. We install seamless aluminum gutters that complement your new roof and provide proper drainage for your property."
  }
];

const schemaData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "New Construction Roofing Jacksonville FL",
  "description": "Professional new construction roofing services in Jacksonville, Florida. Expert roofing installation for new home builds and construction projects.",
  "provider": {
    "@type": "RoofingContractor",
    "name": "Gimo's Roofing",
    "telephone": "+1-904-606-5313",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "33 24th Street East",
      "addressLocality": "Jacksonville",
      "addressRegion": "FL"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": "Jacksonville",
    "containedInPlace": {
      "@type": "State",
      "name": "Florida"
    }
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<Layout
  title="New Construction Roofing Jacksonville FL | New Home Roof Installation | Gimo's Roofing"
  description="New construction roofing services in Jacksonville FL. Expert roof installation for new home builds, working with builders & contractors. Asphalt, metal & tile roofing. Call (904) 606-5313."
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary to-secondary/90 text-white py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <nav class="text-sm mb-4">
            <a href="/" class="text-gray-300 hover:text-primary">Home</a>
            <span class="mx-2 text-gray-400">/</span>
            <a href="/services" class="text-gray-300 hover:text-primary">Services</a>
            <span class="mx-2 text-gray-400">/</span>
            <span class="text-primary">New Construction Roofing</span>
          </nav>
          <h1 class="text-3xl md:text-4xl font-bold mb-4">
            New Construction Roofing in Jacksonville, FL
          </h1>
          <p class="text-lg text-gray-200 mb-6">
            Building a new home in Jacksonville? Partner with experienced roofers who understand new construction. We work with builders and homeowners to install quality roofing systems from the ground up.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href={estimateUrl} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
              Get Free Estimate
            </a>
            <a href="tel:+19046065313" class="btn bg-white text-secondary hover:bg-gray-100">
              (904) 606-5313
            </a>
          </div>
        </div>
        <div class="rounded-2xl aspect-video overflow-hidden shadow-xl">
          <img src="/images/new-roof-installation-blue-house-florida.jpg" alt="New construction roofing installation in Jacksonville FL" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-3">Why Choose Gimo's for New Construction</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          From custom homes to new developments, we deliver quality roofing that protects your investment.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {benefits.map((benefit) => (
          <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition-shadow text-center">
            <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center text-primary mx-auto mb-4">
              <Fragment set:html={benefit.icon} />
            </div>
            <h3 class="font-bold text-secondary mb-2">{benefit.title}</h3>
            <p class="text-gray-600 text-sm">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Roof Types -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-3">Roofing Options for New Construction</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Choose the perfect roofing material for your new Jacksonville home.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        {roofTypes.map((type) => (
          <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition-shadow">
            <h3 class="text-lg font-bold text-secondary mb-2">{type.name}</h3>
            <p class="text-gray-600 text-sm mb-3">{type.description}</p>
            <p class="text-sm text-primary font-semibold mb-3">Lifespan: {type.lifespan}</p>
            <ul class="space-y-2">
              {type.features.map((feature) => (
                <li class="flex items-center gap-2 text-sm text-gray-600">
                  <svg class="w-4 h-4 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Process -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-3">Our New Construction Process</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          From blueprints to final inspection, here's how we deliver quality roofing for your new build.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {process.map((item) => (
          <div class="bg-white rounded-xl p-5 shadow-md">
            <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-secondary font-bold mb-3">
              {item.step}
            </div>
            <h3 class="font-bold text-secondary mb-2">{item.title}</h3>
            <p class="text-gray-600 text-sm">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- For Builders Section -->
  <section class="py-16 bg-secondary text-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-2xl md:text-3xl font-bold mb-4">
            Partnering with <span class="text-primary">Builders & Contractors</span>
          </h2>
          <p class="text-gray-300 mb-6">
            We understand that construction schedules are tight and every delay costs money. That's why we've built our reputation on reliability, quality, and seamless coordination with construction teams.
          </p>
          <ul class="space-y-3 mb-6">
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span>On-time installation to meet your project timeline</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span>Competitive pricing for multi-home developments</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span>Coordination with other trades for smooth workflow</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span>Full code compliance and inspection-ready work</span>
            </li>
          </ul>
          <a href="tel:+19046065313" class="btn btn-primary">Call for Builder Pricing</a>
        </div>
        <div class="rounded-2xl aspect-video overflow-hidden shadow-xl">
          <img src="/images/roofing-crew-installation-action.jpg" alt="Roofing crew working on new construction" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16">
    <div class="max-w-3xl mx-auto px-4">
      <div class="text-center mb-10">
        <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-3">Frequently Asked Questions</h2>
        <p class="text-gray-600">Common questions about new construction roofing in Jacksonville.</p>
      </div>

      <div class="space-y-3">
        {faqs.map((faq, index) => (
          <div class="border border-gray-200 rounded-xl overflow-hidden bg-white">
            <button class="faq-btn w-full px-5 py-4 text-left flex justify-between items-center hover:bg-gray-50" data-index={index}>
              <span class="font-semibold text-secondary text-sm pr-4">{faq.question}</span>
              <svg class="w-4 h-4 text-primary faq-icon transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="faq-answer hidden px-5 pb-4">
              <p class="text-gray-600 text-sm">{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-3">
        Building a New Home?
      </h2>
      <p class="text-secondary/80 mb-6">
        Get a free estimate for your new construction roofing project in Jacksonville.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={estimateUrl} target="_blank" rel="noopener noreferrer" class="btn bg-secondary text-white hover:bg-secondary/90">
          Get Your Free Estimate
        </a>
        <a href="tel:+19046065313" class="btn bg-white text-secondary hover:bg-gray-100">
          Call (904) 606-5313
        </a>
      </div>
    </div>
  </section>
</Layout>
