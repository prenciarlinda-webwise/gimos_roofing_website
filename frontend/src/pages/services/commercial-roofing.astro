---
import Layout from '../../layouts/Layout.astro';

const estimateUrl = 'https://app.roofr.com/instant-estimator/9ef814fe-1efa-4e6b-aaed-45ff7eda2015/GimosRoofing/welcome-question';
const financingUrl = 'https://application.enerbank.com/#/link?spnum=8007747598&cid=118584&promo=DEL2625&loamt=';

const roofingSystems = [
  {
    name: "TPO Roofing",
    description: "Single-ply membrane that reflects UV rays and reduces cooling costs. Excellent for Jacksonville's hot climate.",
    benefits: ["Energy efficient", "UV resistant", "Cost-effective", "Easy maintenance"]
  },
  {
    name: "EPDM Roofing",
    description: "Durable rubber roofing membrane known for its longevity and resistance to extreme weather.",
    benefits: ["Long lifespan", "Weather resistant", "Affordable", "Flexible"]
  },
  {
    name: "Metal Roofing",
    description: "Standing seam and other metal systems for commercial buildings requiring superior durability.",
    benefits: ["50+ year lifespan", "Hurricane rated", "Low maintenance", "Fire resistant"]
  },
  {
    name: "Modified Bitumen",
    description: "Multi-layer asphalt roofing system that provides excellent waterproofing and durability.",
    benefits: ["Superior waterproofing", "High durability", "Good for foot traffic", "Easy repairs"]
  }
];

const industries = [
  "Retail Stores",
  "Office Buildings",
  "Warehouses",
  "Restaurants",
  "Medical Facilities",
  "Churches",
  "Schools",
  "Industrial Buildings"
];

const faqs = [
  {
    question: "Do you work on large commercial buildings?",
    answer: "Yes, we handle commercial roofing projects of all sizes, from small retail spaces to large warehouses and industrial facilities throughout Jacksonville."
  },
  {
    question: "Can you work around our business hours?",
    answer: "Absolutely. We understand that business disruption means lost revenue. We can schedule work during off-hours, weekends, or in phases to minimize impact on your operations."
  },
  {
    question: "Do you offer commercial roof maintenance plans?",
    answer: "Yes, we offer customized maintenance plans to extend your roof's lifespan and catch potential issues before they become costly problems."
  },
  {
    question: "How long does a commercial roof installation take?",
    answer: "Timeline varies based on building size and roofing system. We provide detailed project timelines during the estimate process and work efficiently to complete on schedule."
  }
];

const schemaData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Commercial Roofing Jacksonville FL",
  "description": "Professional commercial roofing services in Jacksonville, Florida. TPO, EPDM, metal roofing and more for businesses.",
  "provider": {
    "@type": "RoofingContractor",
    "name": "Gimo's Roofing",
    "telephone": "+1-904-606-5313"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": { "@type": "Answer", "text": faq.answer }
  }))
};
---

<Layout
  title="Commercial Roofing Jacksonville FL | Business Roofing Services | Gimo's Roofing"
  description="Professional commercial roofing in Jacksonville FL. TPO, EPDM, metal & modified bitumen roofing for businesses. Free estimates. Call (904) 606-5313."
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-secondary to-secondary/90 text-white py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <nav class="text-sm mb-4">
            <a href="/" class="text-gray-300 hover:text-primary">Home</a>
            <span class="mx-2 text-gray-400">/</span>
            <a href="/services" class="text-gray-300 hover:text-primary">Services</a>
            <span class="mx-2 text-gray-400">/</span>
            <span class="text-primary">Commercial Roofing</span>
          </nav>
          <h1 class="text-3xl md:text-4xl font-bold mb-4">
            Commercial Roofing in Jacksonville, FL
          </h1>
          <p class="text-lg text-gray-200 mb-6">
            Professional roofing solutions for businesses throughout Jacksonville. From retail stores to industrial facilities, we deliver quality commercial roofing with minimal disruption.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href={estimateUrl} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
              Get Free Estimate
            </a>
            <a href="tel:+19046065313" class="btn bg-white text-secondary hover:bg-gray-100">
              (904) 606-5313
            </a>
          </div>
        </div>
        <div class="rounded-2xl aspect-video overflow-hidden shadow-xl">
          <img src="/images/4) Commercial roofing services.jpg" alt="Commercial roofing in Jacksonville FL" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- Roofing Systems -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-3">Commercial Roofing Systems</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          We install and maintain a variety of commercial roofing systems to meet your building's needs.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {roofingSystems.map((system) => (
          <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition-shadow">
            <h3 class="text-lg font-bold text-secondary mb-2">{system.name}</h3>
            <p class="text-gray-600 text-sm mb-4">{system.description}</p>
            <ul class="grid grid-cols-2 gap-2">
              {system.benefits.map((benefit) => (
                <li class="flex items-center gap-2 text-sm text-gray-600">
                  <svg class="w-4 h-4 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- TPO Roofing Contractor Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-4">
            TPO Roofing Contractor in Jacksonville
          </h2>
          <p class="text-gray-600 mb-4">
            As a trusted <strong>TPO roofing contractor</strong>, we specialize in thermoplastic polyolefin membrane systems that deliver exceptional performance in Florida's demanding climate. TPO roofing has become the gold standard for commercial flat roofs, offering superior UV resistance and energy efficiency.
          </p>
          <p class="text-gray-600 mb-6">
            Our certified TPO installation crews use heat-welded seams that create a watertight bond stronger than the membrane itself. Whether you're building new or replacing an aging roof, our TPO systems come with manufacturer warranties up to 30 years.
          </p>
          <ul class="space-y-3">
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <span class="text-gray-700">Heat-welded seams for superior waterproofing</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <span class="text-gray-700">Energy Star rated for reduced cooling costs</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <span class="text-gray-700">Up to 30-year manufacturer warranties available</span>
            </li>
          </ul>
        </div>
        <div class="rounded-2xl aspect-video overflow-hidden shadow-xl">
          <img src="/images/flat-metal-roof-installation.jpg" alt="TPO roofing installation in Jacksonville" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- Multi-Family Roofing Contractor Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1 rounded-2xl aspect-video overflow-hidden shadow-xl">
          <img src="/images/commercial-gray-shingle-roof.jpg" alt="Multi-family roofing project in Jacksonville" class="w-full h-full object-cover" />
        </div>
        <div class="order-1 lg:order-2">
          <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-4">
            Multi-Family Roofing Contractor
          </h2>
          <p class="text-gray-600 mb-4">
            Managing an HOA, apartment complex, or condominium association in Jacksonville? As an experienced <strong>multi-family roofing contractor</strong>, we understand the unique challenges of large-scale roofing projects that affect multiple residents.
          </p>
          <p class="text-gray-600 mb-6">
            We coordinate with property managers to minimize tenant disruption, phase work strategically, and ensure consistent quality across all units. Our team handles everything from 4-unit townhomes to 200+ unit apartment communities.
          </p>
          <ul class="space-y-3">
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <span class="text-gray-700">Phased installation to minimize tenant disruption</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <span class="text-gray-700">Bulk pricing for multiple buildings</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <span class="text-gray-700">HOA board presentation support</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
              <span class="text-gray-700">Long-term maintenance contracts available</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Industries Served -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-4">
            Industries We Serve
          </h2>
          <p class="text-gray-600 mb-6">
            We provide commercial roofing services for a wide range of business types throughout Jacksonville and Northeast Florida.
          </p>
          <div class="grid grid-cols-2 gap-3">
            {industries.map((industry) => (
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-700">{industry}</span>
              </div>
            ))}
          </div>
        </div>
        <div class="rounded-2xl aspect-video overflow-hidden shadow-xl">
          <img src="/images/flat-metal-roof-installation.jpg" alt="Commercial flat roof installation" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-3">Why Choose Gimo's for Commercial Roofing?</h2>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-white rounded-xl shadow-md p-6 text-center">
          <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-secondary mb-2">Minimal Disruption</h3>
          <p class="text-gray-600 text-sm">We work around your schedule to minimize impact on your business operations.</p>
        </div>
        <div class="bg-white rounded-xl shadow-md p-6 text-center">
          <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-bold text-secondary mb-2">Fully Insured</h3>
          <p class="text-gray-600 text-sm">Comprehensive liability and workers' compensation insurance protects your business.</p>
        </div>
        <div class="bg-white rounded-xl shadow-md p-6 text-center">
          <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
          </div>
          <h3 class="font-bold text-secondary mb-2">Maintenance Plans</h3>
          <p class="text-gray-600 text-sm">Proactive maintenance programs to extend your roof's lifespan and prevent issues.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4">
      <div class="text-center mb-10">
        <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-3">Frequently Asked Questions</h2>
        <p class="text-gray-600">Common questions about commercial roofing in Jacksonville.</p>
      </div>

      <div class="space-y-3">
        {faqs.map((faq, index) => (
          <div class="border border-gray-200 rounded-xl overflow-hidden bg-white">
            <button class="faq-btn w-full px-5 py-4 text-left flex justify-between items-center hover:bg-gray-50" data-index={index}>
              <span class="font-semibold text-secondary text-sm pr-4">{faq.question}</span>
              <svg class="w-4 h-4 text-primary faq-icon transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
            </button>
            <div class="faq-answer hidden px-5 pb-4">
              <p class="text-gray-600 text-sm">{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-3">
        Need Commercial Roofing?
      </h2>
      <p class="text-secondary/80 mb-6">
        Protect your business with a professional commercial roofing solution. Get your free estimate today.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={estimateUrl} target="_blank" rel="noopener noreferrer" class="btn bg-secondary text-white hover:bg-secondary/90">
          Get Your Free Estimate
        </a>
        <a href="tel:+19046065313" class="btn bg-white text-secondary hover:bg-gray-100">
          Call (904) 606-5313
        </a>
      </div>
    </div>
  </section>
</Layout>